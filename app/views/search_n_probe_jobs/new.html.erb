<div class="flex flex-wrap p-8 mx-auto max-w-[1200px] bg-white gap-4 justify-between">
  
  
  <div class="mx-auto gap-2">

    <h3 class="mb-8 text-2xl font-bold">Look for fresh, working cams</h3>
    
    <%= form_with url: search_n_probe_jobs_path, class: "form" do |form| %>

      <div class="mb-6 flex flex-col">
        <%= form.label :query, class: "mb-2 block" %>
        <%= form.select :query, SearchNProbeJob::QUERIES %>
      </div>
      
      <div class="mb-6 flex flex-col">
        <%= form.label :country, class: " mb-2 block" %>
        <%= form.select :country, ISO3166::Country.codes.prepend("GLOBAL"), class: "block" %>
      </div>
      
      <div class="mb-6 flex flex-col">
        <%= form.label :shodan_api_key, class: " mb-2 block" %>
        <%= form.select :shodan_api_key, ShodanApiKey.all.collect {|key| [key.key, key.key]}, class: "block" %>
      </div>
      
      <div class="mb-6 flex flex-col">
        <%= form.label :page, class: " mb-2 block" %>
        <%= form.select :page, SearchNProbeJob::PAGES, class: "block" %>
      </div>
      
      <div class="mb-6 flex flex-col">
        <%= form.label :extra_filters, class: " mb-2 block" %>
        <%= form.text_field :extra_filters, placeholder: "Extra Shodan Filters" %>
      </div>
      
      <div class="mb-6 flex flex-col">
        <%= form.submit "START", class: "block  btn-dark p-1 text-sm " %>
      </div>

    <% end %>
    
  </div>

</div>
