<!DOCTYPE html>
<html>
  <head>
    <title>Camwall</title>
    
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-[#1c1733] px-6">
    
    <!-- Flash notification messages container -->
    <div id="flash" class="px-2 fixed top-5 left-1/2 gap-2 -translate-x-1/2 flex flex-col items-center w-max max-w-full">
      <%= render "layouts/flash" %>
    </div>

    <!-- Header -->
    <div class="max-w-[1200px] mx-auto">
      <%= render "layouts/header" %>
    </div>
    
    <!-- Main content -->
    <main class="max-w-[1200px] mx-auto">
      <%= yield %>
    </main>
    
    
  </body>
</html>
